{
  "name": "@crispy-streaming/media-core",
  "version": "0.4.5",
  "description": "Stremio-style IDs, addon meta parsers, Continue Watching utilities, and TMDB/Trakt/Simkl types for Crispy clients",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepack": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stremio",
    "addon",
    "tmdb",
    "trakt",
    "media",
    "typescript",
    "parser"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aayushrautela/crispy-media-core.git"
  },
  "bugs": {
    "url": "https://github.com/aayushrautela/crispy-media-core/issues"
  },
  "homepage": "https://github.com/aayushrautela/crispy-media-core#readme",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
