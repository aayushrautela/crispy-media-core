{
  "name": "@crispy-streaming/media-core",
  "version": "0.1.1",
  "description": "Platform-agnostic TMDB/Trakt types, ID helpers, and parsers for Crispy clients",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "tmdb",
    "trakt",
    "media",
    "typescript",
    "parser"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crispy-streaming/media-core.git"
  },
  "bugs": {
    "url": "https://github.com/crispy-streaming/media-core/issues"
  },
  "homepage": "https://github.com/crispy-streaming/media-core#readme",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
